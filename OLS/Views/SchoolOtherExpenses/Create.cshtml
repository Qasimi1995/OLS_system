@model IList<OLS.ViewModels.SchoolOtherExpensesViewModel>



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @await Html.PartialAsync("../steps")
                <div style="text-align:center;background-color: #0193df;">
                    <h3 style="padding:5px;color: white;">دیگر مصارف/نور لګښتونه/Other expenses</h3>
                </div>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="table-responsive">
                        <table class="table table-bordered no-wrap">
                            <thead>
                                <tr>

                                    <th class="text-wrap">نوع مصرف/د لګښت ډول/Expense Type</th>
                                    <th class="text-wrap">مصرف در یک ماه/د تعمیر کرایه/Expense per Month</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        @Html.HiddenFor(m => Model[i].OtherExpenseTypeId)

                                        <tr>

                                            <td>
                                                @Model[i].OtherExpenseTypeName
                                            </td>
                                            <td>
                                                @Html.EditorFor(m => Model[i].ExpensePerMonth, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(m => Model[i].ExpensePerMonth, null, new { @class = "text-danger" })
                                            </td>


                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                    <input type="submit" id="btnSave" style="background-color:#0193df;" value="ثبت/ثبت/Save" class="btn btn-primary" />
                    <div style="float:left;">
                        <button type="button" id="nextBtn" style="background-color:#0193df;" onclick="@("window.location.href='" + @Url.Action("Navigate", "SchoolStaffExpenses") + "'");" class="btn btn-primary">قبلی/مخکی/Previous</button>
                        @*<button type="button" id="nextBtn" onclick="@("window.location.href='" + @Url.Action("", "") + "'");" class="btn btn-primary">تسلیم درخواستی</button>*@
                        <input type="submit" class="btn btn-primary" style="background-color:#0193df;" value="بعدی/وروسته/Next" />
                        @if (ViewBag.Message != null)
                        {
                            //  <div><span class="text-info">@ViewBag.Message</span></div>
                            <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
                            <script src="~/sweetalert/sweetalert.min.js"></script>
                            <script type="text/javascript">
                                                    @*swal({
                                                        "@ViewBag.Message",
                                                        "حساب موفقانه ایجاد گردید / تاسو په بریالیتوب سره یو حساب جوړ کړی",
                                                        "success"
                                                        })*@
                                                    swal({
                                                        title: "@ViewBag.Message",
                                                        text: "حساب موفقانه ایجاد گردید / تاسو په بریالیتوب سره یو حساب جوړ کړ",
                                                        icon: "success",
                                                        button: "OK",
                                                    })
                                                        .then(okay => {
                                                        if (okay) {
                                                            window.location.href = "/SchoolOtherExpenses/Create";
                                                        }
                                                    });
                            </script>
                        }

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>









