@model IList<OLS.ViewModels.SchoolFinancialPlanViewModel>

@{ var year = DateTime.Now.Year;}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @await Html.PartialAsync("../steps");

                <div style="text-align:center;background-color: #0193df;">
                    <h3 style="padding:5px;color: white;"> بودیجوي پلان(@year)/پلان بودیجوی(@year)/Financial Plan (@year) </h3>
                </div>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-wrap">صنف/ټولګی/Class</th>
                                    <th class="text-wrap">مقدار فیس/د فیس اندازه/Fee amount</th>
                                    <th class="text-wrap">تعداد شاگردان غیرمجانی/د فیس ورکوونکو زده کوونکو شمېر/#Paid Students</th>
                                    <th class="text-wrap">تعداد شاگردان مجانی/د وړیا زده کوونکو شمېر/#Free Students/</th>
                                    <th class="text-wrap">فیس داخله/د داخلې فیس/Admission Fee</th>

                                </tr>
                            </thead>
                            <tbody>


                                @if (Model != null)
                                {
                                    string required = "";

                                    if (ViewBag.schoolBussinesType == "For Profit")
                                    {
                                        required = "required";
                                    }
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        @Html.HiddenFor(m => Model[i].Id);
                                        @Html.HiddenFor(m => Model[i].SchoolId);

                                        <tr>
                                            <td>
                                                @Model[i].SchoolSubLevelName
                                            </td>
                                            <td>
                                                <input class="input form-control" disabled type="number" name="[@i].FeeAmount" value="@Model[i].FeeAmount" @required />
                                            </td>
                                            <td>
                                                <input class="input form-control" disabled type="number" name="[@i].NfreeStudents" value="@Model[i].NfreeStudents" @required />
                                            </td>
                                            <td>
                                                <input class="input form-control" disabled type="number" name="[@i].NpaidStudents" value="@Model[i].NpaidStudents" @required />
                                            </td>
                                            <td>
                                                <input class="input form-control" disabled type="number" name="[@i].AdmissionFee" value="@Model[i].AdmissionFee" @required />
                                            </td>
                                        </tr>

                                    }

                                }

                            </tbody>
                        </table>
                        @if (ViewBag.schoolBussinesType == "For Profit")
                        {
                            @if (ViewBag.Tax != null)
                            {
                                <br />
                                <div class="shadow-lg p-3 mb-5 bg-white rounded">
                                    <div style="margin:5px;">
                                        <span class="text-info font-weight-bold">ده فیصد(@ViewBag.Tax) افغانی درامد کلی به حیث تضمین بانکی ضرورت میباشد.</span>
                                    </div>
                                    <div style="        margin: 5px;">
                                        <span class="text-info font-weight-bold ">د بانکي تضمین لپاره د ټولې بودیجې ۱۰ سلنه(@ViewBag.Tax) باید ورکړل شي</span>
                                    </div>
                                </div>
                                <br />
                            }
                        }

                    </div>
                    @*<input type="submit" id="btnSave" value="ثبت/ثبت/Save" class="btn btn-outline-success" />*@
                    <div style="float:left;">
                        <button type="button" id="nextBtn" style="background-color:#0193df;" onclick="@("window.location.href='" + @Url.Action("NavigateNextY", "EnrollmentPlan") + "'");" class="btn btn-primary">قبلی/مخکی/Previous</button>
                        <button type="button" id="nextBtn" style="background-color:#0193df;" onclick="@("window.location.href='" + @Url.Action("Navigate", "SchoolStaffExpenses") + "'");" class="btn btn-primary">بعدی/وروسته/Next</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        //Automatically close alert
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 5000);

        $(document).ready(function () {
            $(".input").focusout(function () {
                if ($(this).val() == '') {
                    $(this).css('border', 'solid 2px red');
                }
                else {

                    // If it is not blank.
                    $(this).css('border', 'solid 2px green');
                }
            }).trigger("focusout");
        });
    </script>
}