<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png">
    <title>ریاست مکاتب خصوصی</title>

    <!-- Custom CSS -->
    <!-- Custom CSS -->
    <link href="~/app-assets/css/style.css" rel="stylesheet">

    <!-- You can change the theme colors from here -->
    <link href="~/app-assets/css/colors/blue.css" id="theme" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>


    <![endif]-->

    @if (culture == "en")
    {


        <link href="~/assets/css/LTR.css" rel="stylesheet" />
        
     }


</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <section id="wrapper" class="login-register login-sidebar" style="background-image:url(../assets/images/background/login_student.jpg);">

      
        <div class="login-box card">
            <div class="card-body">
                <partial name="_LanguageChange" />
                <form class="form-horizontal form-material" id="loginform" asp-action="login">
                    <br />
                    <a href="#" class="text-center d-block"><img src="../assets/images/MOE_logo.png" style="height:120px;width:auto" alt="Home" /></a>
                    <br />
                    <br />
                    @if (@ViewBag.RoleError != null)
                    {
            <label class="text-info"> @ViewBag.RoleError</label>}



                  
                    <div class="form-group mt-4">
                        <div class="col-xs-12">
                            <input class="form-control" asp-for="UserName" placeholder="@localizer["UserName"]">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input asp-for="Password" class="form-control" type="password" placeholder="@localizer["Password"]">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-flex no-block align-items-center">
                            <div class="checkbox checkbox-primary pt-0">

                           
                                
                            <input asp-for="RememberMe" id="checkbox-signup" type="checkbox">


                                <label for="checkbox-signup">
                                    <span>@localizer["Remember"] </span>
                                </label>

                               
                                
                          
                                <br />
                                <br />
                                <span>
                                    <a class="font-weight-bold text-muted" style="font-size:11px;" asp-action="ForgotPassword" asp-controller="Account">
                                        <i class="fa fa-lock mr-1"></i> @localizer["ForgotPassword"]
                                    </a>
                                </span>
                            </div>

                            <div class="ml-auto">

                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center mt-3">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" style="background-color:#0193df;" type="submit">@localizer["Login"]</button>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 

                    <div class="form-group mb-0">
                        <div class="col-sm-12 text-center">
                            <span> @localizer["DoNotHaveAccount"]</span>
                            <br />
                            <br />
                            <span><a href="@Url.Action("Register","Account")" class="text-info ml-1"><b style="color:#0193df;"> @localizer["CreateAccount"]</b></a></span>
                        </div>
                    </div>

                </form>
                <form class="form-horizontal" id="recoverform" action="">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <h3>Recover Password</h3>
                            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group text-center mt-3">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="~/jquery-3.4.1.js"></script>
    <script src="~/jquery.validate.min.js"></script>
    <script src="~/jquery.validate.unobtrusive.min.js"></script>
    <script data-cfasync="false" src="../../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="~/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/assets/plugins/popper/popper.min.js"></script>
    <script src="~/assets//plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/app-assets/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/app-assets/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/app-assets/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="~/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/assets/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/app-assets/js/custom.min.js"></script>
    <!-- ============================================================== -->
    <!-- Style switcher -->
    <!-- ============================================================== -->
    <script src="~/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
    <script src="~/jquery.validate.unobtrusive.min.js"></script>
</body>


