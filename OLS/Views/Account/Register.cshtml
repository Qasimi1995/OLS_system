<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <section id="wrapper" class="login-register login-sidebar" style="background-image:url(../assets/images/background/pv_school.jpg);">
        <div class="login-box card">
            <div class="card-body">
                <form class="form-horizontal form-material" id="loginform" asp-action="Register">

                    <a href="#" class="text-center d-block"><img src="../assets/images/MOE_logo.png" style="height:90px;width:auto" alt="Home" /></a>
                    <h3 class="p-2 rounded-title mt-4 mb-0 font-weight-bold " style="font-size:17px;">ایجاد حساب / حساب جوړول/ User Creation</h3>

                    <div class="form-group mt-3">
                        <div class="col-xs-12">
                            <input asp-for="UserName" class="form-control" placeholder="نام کاربر / کارن نوم / User Name">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="Email" class="form-control" required="" placeholder="ایمیل / بریښنالیک / Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="Password" class="form-control" type="password" required="" placeholder="رمز عبور/ رمز - Abcd@123 / Password ">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="ConfirmPassword" class="form-control" type="password" required="" placeholder="تایید رمز / د رمز تایید / Password Confirmation">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="FirstName" class="form-control" required="" placeholder="اسم/ نوم/ Name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input asp-for="LastName" class="form-control" required="" placeholder="تخلص / تخلص / Last Name">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div asp-validation-summary="All"></div>



                    <div class="form-group text-center mt-3">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" style="font-size:13px;">ایجاد حساب / حساب جوړول/ User Creation</button>
                        </div>
                    </div>

                    @if (ViewBag.Message != null)
                    {
                   
                    //  <div><span class="text-info">@ViewBag.Message</span></div>
                    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
                        <script src="~/sweetalert/sweetalert.min.js"></script>
                        <script type="text/javascript">
                                                    @*swal({
                                                        "@ViewBag.Message",
                                                        "حساب موفقانه ایجاد گردید / تاسو په بریالیتوب سره یو حساب جوړ کړی",
                                                        "success"
                                                        })*@
                                                    swal({
                                                        title: "@ViewBag.Message",
                                                        text: "حساب موفقانه ایجاد گردید / تاسو په بریالیتوب سره یو حساب جوړ کړی",
                                                        icon: "success",
                                                        button: "OK",
                                                    })
                                                        .then(okay => {
                                                        if (okay) {
                                                            window.location.href = "/Account/Login";
                                                        }
                                                    });
                        </script>

                    }
                    <div class="form-group mb-0">
                        <div class="col-sm-12 text-center">
                            <span>حساب دارید / ایا حساب لری / Do you have account ؟</span>
                            <span><a href="@Url.Action("Login","Account")" class="text-info ml-1"><b> وارد شوید / د ننه کیدل / Log in </b></a></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
