@model OLS.ViewModels.UserViewModel

@{
    ViewData["Title"] = "EditUserInfo";
}

    <div class="row page-titles">
        <div class="col-md-5 col-12 align-self-center">
            <h3 class="text-themecolor">معلومات کاربر</h3>
        </div>

    </div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <form class="form-horizontal form-material" id="loginform" asp-action="EditUserInfo">
                    <div class="form-group ">
                        <div>
                            <input asp-for="Email" class="form-control" required="" placeholder="ایمیل">
                        </div>
                    </div>

                    <div class="form-group ">
                        <div>
                            <input asp-for="FirstName" class="form-control" required="" placeholder="اسم /نوم/Name">
                        </div>
                    </div>
                    <div class="form-group ">
                        <div>
                            <input asp-for="LastName" class="form-control" required="" placeholder="تخلص /تخلص/Last Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="PerProvinceId">
                            ولایت/ولایت/Province:

                        </label>
                        <select asp-for="ProvinceId" id="PerProvince" class="form-control">
                            <option selected value="">--Select--</option>
                            @if (ViewBag.province != null)
                            {
                                foreach (var province in ViewBag.province)
                                {
                                    <option value="@province.ProvinceId">@province.ProvNaDar - @province.ProvNaEng</option>
                                }
                            }

                        </select>

                        <span asp-validation-for="ProvinceId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="EducationLevelID">
                            د حساب حالت/حالت حساب/Status

                        </label>
                        <select asp-for="IsActive" class="form-control">
                            <option selected value="">Select</option>
                            <option value="1">Active</option>
                            <option value="0">In-active</option>

                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>


                    <div class="form-group mt-3">
                        <div>
                            <button class="btn btn-info text-uppercase waves-effect waves-light" type="submit"> ثبت</button>
                        </div>
                    </div>
                    @if (ViewBag.Message != null)
                    {
                        <div><span class="text-info">@ViewBag.Message</span></div>

                    }

                </form>

            </div>
        </div>
    </div>
</div>