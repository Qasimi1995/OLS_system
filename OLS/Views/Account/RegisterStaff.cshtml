@model OLS.ViewModels.RegistrationStaffViewModel

    <div class="row page-titles">
        <div class="col-md-5 col-12 align-self-center">
            <h3 class="text-themecolor">ایجاد حساب / حساب جوړول / User Creation</h3>
        </div>


    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <button type="button" class="btn btn-primary" style="background-color:#0193df;" data-toggle="modal"
                            data-target="#bs-example-modal-lg">
                        ایجاد حساب / حساب جوړول / User Creation
                    </button>
                    <hr />
                    <!--  Modal content for the above example -->
                    <div class="modal fade" id="bs-example-modal-lg" tabindex="-1" role="dialog"
                         aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">

                                <div class="modal-body">
                                    <div class="card card-outline-info">
                                        <div class="card-header" style="background-color:#0193df;">
                                            <h4 class="mb-0 text-white" >ایجاد حساب / حساب جوړول / User Creation</h4>
                                        </div>

                                        <form class="form-horizontal form-material" id="loginform" asp-action="RegisterStaff">
                                            <div class="form-group mt-3">
                                                <div>
                                                    <input asp-for="UserName" class="form-control" required="" placeholder="نام کاربر / کارن نوم / User Name">
                                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <div>
                                                    <input asp-for="Email" class="form-control" required="" placeholder="ایمیل / بریښنالیک / Email">
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <div>
                                                    <input asp-for="Password" class="form-control" type="password" required="" placeholder="رمز عبور/ رمز / Password">
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <div>
                                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="تایید رمز / د رمز تایید / Password Confirmation">
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <div>
                                                    <input asp-for="FirstName" class="form-control" placeholder="اسم / نوم / Name">
                                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group ">
                                                <div>
                                                    <input asp-for="LastName" class="form-control" placeholder=" تخلص / تخلص / Last Name">
                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                </div>
                                            </div>
                                        


                                            <div class="form-group">
                                                <label for="EducationLevelID">
                                                    د حساب حالت / حالت حساب / Status

                                                </label>
                                                <select asp-for="IsActive" class="form-control selectTwo" style="width:100%;">
                                                    <option selected value="">Select</option>
                                                    <option value="1">Active</option>
                                                    <option value="0">In-active</option>

                                                </select>
                                                <span asp-validation-for="IsActive" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">

                                                <label for="EducationLevelID">
                                                    درول/ رول / Role:

                                                </label>
                                                <select asp-for="RoleId" class="form-control selectTwo" style="width:100%;">
                                                    <option selected value="">--Select Role--</option>
                                                    @if (ViewBag.roles != null)
                                                    {
                                                        @foreach (var role in ViewBag.roles)
                                                        {
                                                            <option value="@role.NormalizedName">@role.Name</option>
                                                        }

                                                    }

                                                </select>
                                                <span asp-validation-for="RoleId" class="text-danger"></span>

                                            </div>
                                            <div class="form-group">
                                                <label for="PerProvinceId">
                                                    ولایت/ولایت/Province:

                                                </label>
                                                <select asp-for="ProvinceId" id="PerProvince" class="form-control selectTwo" style="width:100%;">
                                                    <option selected value="">--Select--</option>
                                                    @if (ViewBag.province != null)
                                                    {
                                                        foreach (var province in ViewBag.province)
                                                        {
                                                            <option value="@province.ProvinceId">@province.ProvNaDar - @province.ProvNaEng</option>
                                                        }
                                                    }

                                                </select>

                                                <span asp-validation-for="ProvinceId" class="text-danger"></span>
                                            </div>


                                            <div class="form-group mt-3">
                                                <div>
                                                    <button class="btn btn-primary text-uppercase " style="background-color:#0193df;" type="submit">ایجاد حساب / حساب جوړول/ User Creation</button>
                                                </div>
                                            </div>
                                            @if (ViewBag.Message != null)
                                            {
                                                //  <div><span class="text-info">@ViewBag.Message</span></div>
                                                <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
                                                <script src="~/sweetalert/sweetalert.min.js"></script>
                                                <script type="text/javascript">
                                                    @*swal({
                                                        "@ViewBag.Message",
                                                        "حساب موفقانه ایجاد گردید / تاسو په بریالیتوب سره یو حساب جوړ کړی",
                                                        "success"
                                                        })*@
                                                    swal({
                                                        title: "@ViewBag.Message",
                                                        text: "حساب موفقانه ایجاد گردید / تاسو په بریالیتوب سره یو حساب جوړ کړ",
                                                        icon: "success",
                                                        button: "OK",
                                                    }).then(okay => {
                                                        if (okay) {
                                                            window.location.href = "/Account/RegisterStaff";
                                                        }
                                                    });
                                                </script>

                                            }
                                        </form>
                                       
                                    </div>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->


                    @if (ViewBag.userList != null)
                    {
                        <div class="table-responsive">
                            <table id="example23"
                                   class="display nowrap table table-hover table-striped table-bordered"
                                   cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>اسم /نوم/Name</th>
                                        <th>تخلص /تخلص/Last Name</th>
                                        <th> نام کاربری /نام کاربری/Username</th>
                                        <th> ایمیل/ایمیل/Email</th>
                                        <th>رول/رول/Role</th>
                                        <th>د حساب اوسنی حالت/حالت حساب/Current Status</th>
                                        <th>عمل/عمل/Action</th>



                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < ViewBag.userList.Count; i++)
                                    {
                                        <tr>

                                            <td>
                                                @ViewBag.userList[i].FirstName
                                            </td>
                                            <td>
                                                @ViewBag.userList[i].LastName
                                            </td>
                                            <td>
                                                @ViewBag.userList[i].UserName
                                            </td>
                                            <td>
                                                @ViewBag.userList[i].Email
                                            </td>
                                            <td>
                                                @ViewBag.userList[i].Role
                                            </td>
                                            <td>
                                                @if (ViewBag.userList[i].IsActive == 1)
                                                {
                                                    <span>Active</span>
                                                }
                                                @if (ViewBag.userList[i].IsActive == 0)
                                                {
                                                    <span>In-active</span>
                                                }

                                            </td>
                                            <td class="text-nowrap">
                                                @Html.ActionLink("تصحیح / سمول / Edit", "EditUserInfo", new { id = ViewBag.userList[i].Id })
                                            </td>


                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
    </div>
</div>

<script>
    // In your Javascript (external .js resource or <script> tag)
    $(document).ready(function () {
        $('.selectTwo').select2({
            dropdownParent: $('#bs-example-modal-lg')
        });
    });
</script>